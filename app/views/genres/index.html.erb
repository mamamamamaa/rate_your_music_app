<div class="container mt-5">
  <h1 class="text-center mb-5">Genres</h1>

  <%= link_to "New Genre", new_genre_path, class: "btn btn-primary mb-4" %>

  <% if @genres.present? %>
    <div class="row">
      <% @genres.each do |genre| %>
        <div class="col-md-6 mb-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= link_to genre.name, genre_path(genre), class: "text-primary" %></h5>
              <p class="card-text">
                <small class="text-muted">Tracks in this genre: <%= genre.tracks.count %></small>
              </p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-center">No genres found.</p>
  <% end %>
</div>
