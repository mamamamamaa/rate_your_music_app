<p style="color: green"><%= notice %></p>

<h1 class="text-center"><%= @genre.name %></h1>

<h2 class="mt-5">Tracks in <%= @genre.name %></h2>

<% if @genre.tracks.present? %>
  <ul>
    <% @genre.tracks.each do |track| %>
      <li class="container mt-5" style="list-style-type: none">
        <div class="row justify-content-center">
          <div class="col-md-8">
            <div class="card mb-4">
              <div class="card-header">
                <h2 class="card-title"><%= link_to track.title, track_path(track) %></h2>
              </div>
              <div class="card-body">
                <p>
                  <strong>Length:</strong>
                  <%= track.length %> seconds
                </p>
                <p>
                  <strong>Album:</strong>
                  <%= link_to track.album.title, album_path(track.album) %>
                </p>
                <p>
                  <strong>Artist:</strong>
                  <%= link_to track.artist.name, artist_path(track.artist) %>
                </p>
              </div>
            </div>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
<% else %>
  <p class="text-center">This genre has no tracks yet.</p>
<% end %>
