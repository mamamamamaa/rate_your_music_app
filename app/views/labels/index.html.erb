<div class="container mt-5">
  <h1 class="text-center mb-5">Labels</h1>

  <%= link_to "New Label", new_label_path, class: "btn btn-primary mb-4" %>

  <% if @labels.present? %>
    <div class="row">
      <% @labels.each do |label| %>
        <div class="col-md-6 mb-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= link_to label.name, label_path(label), class: "text-primary" %></h5>
              <p class="card-text">
                <small class="text-muted">Artists in this label: <%= label.artists.count %></small>
              </p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-center">No labels found.</p>
  <% end %>
</div>