<h2 class="text-center my-4">Forgot your password?</h2>

<div class="d-flex justify-content-center">
  <div class="card shadow-lg p-5" style="max-width: 900px; width: 100%; border-radius: 15px; background-color: #f8f9fa;">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="form-group mb-4">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="text-center mb-4">
        <%= f.submit "Send me reset password instructions", class: "btn btn-primary btn-block w-100"  %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>
