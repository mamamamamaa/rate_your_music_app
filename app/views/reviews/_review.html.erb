<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <% if notice %>
        <p class="alert alert-success"><%= notice %></p>
      <% end %>

      <div class="card mb-4">
        <div class="card-header">
          <h2 class="card-title">Review</h2>
        </div>
        <div class="card-body">
          <p>
            <strong>Album:</strong>
            <%= review.album_id %>
          </p>
          <p>
            <strong>Review:</strong>
            <%= review.review %>
          </p>
          <p>
            <strong>Rate:</strong>
            <%= review.rate %>
          </p>
        </div>
        <div class="card-footer text-center">
          <%= link_to "Edit this review", edit_review_path(@review), class: "btn btn-primary mx-2" %>
          <%= link_to "Back to profile", profile_path, class: "btn btn-secondary mx-2" %>
          <%= button_to "Destroy this review", @review, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger mx-2 mt-2" %>
        </div>
      </div>
    </div>
  </div>
</div>
