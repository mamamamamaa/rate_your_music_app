<%= form_with(model: artist, local: true, class: "needs-validation") do |form| %>
  <% if artist.errors.any? %>
    <div class="alert alert-danger">
      <h4 class="alert-heading"><%= pluralize(artist.errors.count, "error") %> prohibited this artist from being saved:</h4>
      <ul>
        <% artist.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control", required: true %>
    <div class="invalid-feedback">
      Please provide a valid name.
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :label_id, class: "form-label" %>
    <%= form.collection_select :label_id, Label.all, :id, :name, { prompt: "Select a label" }, { class: "form-select", required: true } %>
    <div class="invalid-feedback">
      Please provide a valid label.
    </div>
  </div>

  <div class="d-grid">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>

<script>
    (function() {
        'use strict';
        window.addEventListener('load', function() {
            var forms = document.getElementsByClassName('needs-validation');
            var validation = Array.prototype.filter.call(forms, function(form) {
                form.addEventListener('submit', function(event) {
                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        }, false);
    })();
</script>
