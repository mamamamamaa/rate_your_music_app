<div class="container mt-4">
  <h1>Albums</h1>
  <%= link_to "New Album", new_album_path, class: "btn btn-primary mb-4" %>

  <table class="table table-striped">
    <thead class="thead-dark">
    <tr>
      <th>Title</th>
      <th>Artist</th>
      <th>Release date</th>
      <th>Average rating</th>
      <th>Rated</th>
      <th>Language</th>
      <th colspan="3">Actions</th>
    </tr>
    </thead>

    <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= album.title %></td>
        <td><%= album.artist_id %></td>
        <td><%= album.release_date %></td>
        <td><%= album.average_rating %></td>
        <td><%= album.rated %></td>
        <td><%= album.language %></td>
        <td><%= link_to "Review", album, class: "btn btn-info btn-sm" %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

</div>
