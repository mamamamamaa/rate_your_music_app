<h1>Albums</h1>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Artist</th>
    <th>Release date</th>
    <th>Average rating</th>
    <th>Rated</th>
    <th>Language</th>
    <th>Description</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @albums.each do |album| %>
    <tr>
      <td><%= album.title %></td>
      <td><%= album.artist_id %></td>
      <td><%= album.release_date %></td>
      <td><%= album.average_rating %></td>
      <td><%= album.rated %></td>
      <td><%= album.language %></td>
      <td><%= album.description %></td>
      <td><%= link_to "Show", album %></td>
      <td><%= link_to "Edit", edit_album_path(album) %></td>
      <td><%= link_to "Destroy", album, method: :delete, data: { confirm: "Are you sure?" } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to "New Album", new_album_path %>

