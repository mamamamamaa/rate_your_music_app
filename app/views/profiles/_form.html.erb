<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <%= form_with(model: profile, local: true, class: "needs-validation", novalidate: true) do |form| %>
        <% if profile.errors.any? %>
          <div class="alert alert-danger">
            <h4 class="alert-heading"><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h4>
            <ul>
              <% profile.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= form.label :first_name, class: "form-label" %>
          <%= form.text_field :first_name, class: "form-control", required: true %>
        </div>

        <div class="form-group">
          <%= form.label :last_name, class: "form-label" %>
          <%= form.text_field :last_name, class: "form-control", required: true %>
        </div>

        <div class="form-group">
          <%= form.label :avatar, class: "form-label d-block" %>
          <div class="custom-file">
            <%= form.file_field :avatar, class: "custom-file-input", id: "customFile" %>
            <label class="custom-file-label" for="customFile" id="customFileLabel">Choose file</label>          </div>
        </div>

        <div class="form-group">
          <%= form.label :favorite_genres, "Favorite Genres", class: "form-label" %>
          <%= form.collection_select :favorite_genres, Genre.all, :id, :name, {}, { multiple: true, class: "form-control" } %>
        </div>

        <div class="form-group">
          <%= form.submit "Save Profile", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
    document.getElementById('customFile').addEventListener('change', (e) => {
        const fileName = e.target.files[0].name;
        document.getElementById('customFileLabel').innerText = fileName;
    });
</script>
